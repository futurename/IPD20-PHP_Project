        <div class="text-5xl">
            !!Logo!!
        </div>
        <div> 
            <div class="text-right">
                {% if session.user %}
                    <span >You are logged in as {{ session.user.username }}</span>
                    <a class="underline" href="/logout">Logout</a>
                {% else %}
                    <a class="underline" href="/login">Login</a> or <a class="underline" href="/register">Register</a>
                {% endif %}
            </div>


            <ul class="hidden sm:flex sm:mt-2">
                <li class="p-2 rounded hover:bg-gray-600 hover:text-gray-200"><a href=#>menu1</a></li>
                <li class="p-2 rounded hover:bg-gray-600 hover:text-gray-200"><a href=#>menu2</a></li>
                <li class="p-2 rounded hover:bg-gray-600 hover:text-gray-200"><a href=#>menu3</a></li>
